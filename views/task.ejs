<link rel="stylesheet" href="../../images/pracownik.css">
  <div class="d-flex align-items-center"> 
    <div class="me-auto">
        <a href="/dashboardUser">
            <img  src="../../images/Logo.svg" alt="" width="120" height="120" style = "float: left;">
        </a>
    </div>
    <div style="margin-top: 12px; margin-right: 10px;">
        <p class="lead">Jesteś zalogowany jako: <b><%= tasks[0].worker %> </b></p>
    </div>
    <div class = "">
      
        <a href="/users/logout" class="btn btn-secondary rounded-pill">Wyloguj</a>
    </div>
</div> 


<div class="fw-bold fs-1 container p-3 my-3 bg-warning text-white text-center rounded-pill shadow-lg">
  Szczegóły zadania
</div>

<!--Okruszki START-->
<nav class = "mt-3" style="--bs-breadcrumb-divider: '>';" aria-label="breadcrumb">
  <ol class="breadcrumb">
		<li class="breadcrumb-item"><a href="/dashboardUser/<%= tasks[0].worker %>">Panel Głowny</a></li>
		<li class="breadcrumb-item active" aria-current="page"><%=tasks[0].name %></li>
  </ol>
</nav>
<!--Okruszki KONIEC-->



<!--Karta Edycji Zadania START-->
<div style = "width: 60%" class = "p-3 mt-5 shadow-lg mx-auto">

	<!--Nazwa Projektu START-->
	<div style = "width: fit-content;" class="mx-0 d-flex justify-content-start fs-2 fw-bold container my-3 rounded-pill shadow bg-light border border-warning border-3 text-warning">
		<div>
			<b>Projekt: </b>  <%=tasks[0].project %>
		</div>
	</div>
	<!--Nazwa Projektu KONIEC-->

	<!--Nazwa Zadania START-->
	<div style = "width: fit-content;" class="mx-0 d-flex justify-content-start fs-3 fw-bold container my-3 rounded-pill shadow bg-light border border-warning border-3 text-warning">
		<div>
			<b>Zadanie: </b> <%=tasks[0].name %>
		</div>
	</div>
	<!--Nazwa Zadania KONIEC-->

	<!--Główna Zawartość Karty Zadania START-->
	<div class = "fs-4">
		<form action="/edit_status/<%= tasks[0]._id %>" method="POST">
			
			<!--Opis Zadania START-->
			<div class="form-group mt-5">
				<label for="start-date" class = "fs-4 fw-bold">Opis zadania:</label>
				<%=tasks[0].comment%>  
			</div>
			<!--Opis Zadania KONIEC-->

			


			<!--Daty START-->
			<div class = "d-flex justify-content-between mt-3">
				<div class="form-group">
					<label for="start-date" class = "fw-bold">Data rozpoczęcia:</label>
					<%=tasks[0].startDate %>  
				</div>
				<div class="form-group">
					<label for="end-date" class = "fw-bold">Data zakończenia:</label>
					<%=tasks[0].endDate %>
				</div>
			</div>
			<!--Daty KONIEC-->

			<!--Priorytet START-->
			<div class="form-group mt-3">
				<label for="name" class = "fw-bold">Priorytet:</label>
				<%=tasks[0].priority %>
			</div>
			<!--Priorytet KONIEC-->
				
			<!--Zmień Status START-->
			<div class="form-group d-flex mt-3">
				<label for="name" class = "fw-bold">Zmien status zadania:</label>
				<select style = "width: 50%" class = "form-select ms-1" name="status" id="status">
					<option value="" selected disabled hidden>Zmień status</option>
					<option value="Nierozpoczęte">Nierozpoczęte</option>
					<option value="W trakcie">W trakcie</option>
					<option value="Zakończone">Zakończone</option>
				</select>
			</div>
			<!--Zmień Status KONIEC-->



			<!--Przyciski START-->
			<div class = "d-flex justify-content-between align-items-top mt-4">
				<a href="/dashboardUser/<%= tasks[0].worker %>">
					<button type = "button" class = "btn btn-lg btn-warning">	
						Powrót
					</button>
				</a>

				<button type="submit" class="btn btn-lg btn-warning">
					Zapisz
				</button>
			</div>
			<!--Przyciski KONIEC-->

		</form>
	</div>
</div>